@model Hospital.UI.Models.LoginViewModel

<div class="col-12 order-lg-0 bg-light mt-1 rounded">
    <section class="text-center offset-1 mt-3">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class=" form-group col-md-10 ">
            @Html.ValidationSummary(true, "", new { @class = "text-danger float-left" })
            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new {placeholder = @Html.DisplayNameFor(m => m.UserName), @class = "form-control text-center" }})
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>
            <div class="form-group col-md-10 mt-1">
                @Html.EditorFor(m => m.Password, new {htmlAttributes = new {placeholder = @Html.DisplayNameFor(m=>m.Password), @class = "form-control text-center" }})
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-10">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Submit" class="btn btn-secondary" />
                </div>
            </div>
        }
    </section>
</div>
