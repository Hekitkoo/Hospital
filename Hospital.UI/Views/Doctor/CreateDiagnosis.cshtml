@model Hospital.UI.Models.CreateDiagnosisViewModel

<div class="col-12 col-lg-9 order-lg-0 mt-1 bg-light rounded">
    @using (Html.BeginForm())
    {
        <div class=" form-group col-md-10 ">
            @Html.HiddenFor(m => m.PatientCardId)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.LabelFor(m => m.DefinitiveDiagnosis)
            @Html.EditorFor(m => m.DefinitiveDiagnosis, new { htmlAttributes = new { placeholder = @Html.DisplayNameFor(m => m.DefinitiveDiagnosis), @class = "form-control text-center" } })
            @Html.ValidationMessageFor(m => m.DefinitiveDiagnosis, "", new { @class = "text-danger" })
        </div>
        <div class=" form-group col-md-1 ">
            @Html.LabelFor(m => m.IsCured)
            @Html.EditorFor(m => m.IsCured, new { htmlAttributes = new { placeholder = @Html.DisplayNameFor(m => m.IsCured), @class = "form-control text-center" } })
            @Html.ValidationMessageFor(m => m.IsCured, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Submit" class="btn btn-secondary" />
            </div>
        </div>
    }
    @Html.ActionLink("Back", "CardDetails", "Patient", new { Id = @Model.PatientCardId }, new { @class = "btn btn-secondary mb-1" })
</div>