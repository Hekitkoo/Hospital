@model Hospital.UI.Areas.Admin.Models.ChangeDoctorViewModel

<div class="col-12 col-lg-9 order-lg-0 mt-1 bg-light rounded">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.Id)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class=" form-group col-md-10 ">
            <div class=" form-group col-md-10 ">
                @Html.LabelFor(m => m.DoctorId)
                @Html.DropDownListFor(m => m.DoctorId, Model.Doctors, new { @class = "form-control text-center" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Submit" class="btn btn-secondary"/>
            </div>
        </div>
    }
    @Html.ActionLink("Back", "Index", "Patient",null, new { @class = "btn btn-secondary" })
</div>